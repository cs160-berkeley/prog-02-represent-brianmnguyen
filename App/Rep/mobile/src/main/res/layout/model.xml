<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/E1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2F80ED"
            android:id="@+id/relativeLayout">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/imagesenator"
                android:background="@drawable/dianne"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Democrat"
                android:id="@+id/party"
                android:layout_alignTop="@+id/imagesenator"
                android:layout_alignLeft="@+id/senator"
                android:paddingLeft="120dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="130dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Senator Dianne Feinstein"
                android:id="@+id/senator"
                android:textStyle="bold"
                android:layout_alignTop="@+id/imagesenator"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="88dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="more info +"
                android:textStyle="bold"
                android:textSize="10dp"
                android:background="#2F80ED"
                android:id="@+id/moreinfo"
                android:onClick="moreinfo"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignTop="@+id/imagesenator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="100dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Website"
                android:textStyle="bold"
                android:textSize="10dp"
                android:id="@+id/textView3"
                android:layout_alignTop="@+id/imagesenator"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="100dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Senator Dianne Feinstein"
                android:id="@+id/title"
                android:textStyle="bold"
                android:layout_alignTop="@+id/imagesenator"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="150dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="www.feinstein.senate.gov/public/"
                android:textSize="10dp"
                android:id="@+id/website"
                android:layout_alignTop="@+id/imagesenator"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="73dp"
                android:layout_marginLeft="100dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="email"
                android:textStyle="bold"
                android:textSize="10dp"
                android:id="@+id/email1"
                android:layout_alignTop="@+id/imagesenator"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="73dp"
                android:layout_marginLeft="140dp"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="www.feinstein.senate.gov/public/"
                android:textSize="10dp"
                android:id="@+id/email"
                android:layout_alignTop="@+id/imagesenator"/>






        </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

